<%- include('../partials/header') %>

    <table class="list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Published In</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(function(b) { %>
                <tr>
                    <td>
                        <%= b.title %>
                    </td>
                    <td>
                        <%= b.author %>
                    </td>
                    <td>
                        <%= b.releaseYear %>
                    </td>
                    <td style="border: none;"><a href="/books/<%= b._id %>">DETAILS</a></td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>